# Domain configuration
API_DOMAIN=api.folklovers.example.com
FRONTEND_DOMAIN=folklovers.example.com

# PostgreSQL
POSTGRES_USER=folklovers
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=folklovers_production

# Rails secrets (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=your_secret_key_base_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Scaleway S3 - Backup bucket (for database backups)
S3_BACKUP_BUCKET=folklovers-backups
S3_ENDPOINT=https://s3.fr-par.scw.cloud
S3_REGION=fr-par
S3_ACCESS_KEY=your_scaleway_access_key
S3_SECRET_KEY=your_scaleway_secret_key

# Scaleway S3 - Uploads bucket (for user uploads, future use)
# S3_UPLOADS_BUCKET=folklovers-uploads
